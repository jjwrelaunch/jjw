<!DOCTYPE faces-config PUBLIC
    "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.1//EN"
    "http://java.sun.com/dtd/web-facesconfig_1_1.dtd">

<faces-config>
  <converter>
    <description>converts countries</description>
    <converter-id>jjw.webapp.converter.CountryConverter</converter-id>
    <converter-class>de.jjw.webapp.converter.CountryConverter</converter-class>
  </converter>
  <converter>
    <description>converts regions</description>
    <converter-id>jjw.webapp.converter.RegionConverter</converter-id>
    <converter-class>de.jjw.webapp.converter.RegionConverter</converter-class>
  </converter>
  <converter>
    <description>converts regions for fighter</description>
    <converter-id>jjw.webapp.converter.RegionConverterForFighter</converter-id>
    <converter-class>de.jjw.webapp.converter.RegionConverterForFighter</converter-class>
  </converter>
  <converter>
    <description>converts regions for duoteam</description>
    <converter-id>jjw.webapp.converter.RegionConverterForDuoTeam</converter-id>
    <converter-class>de.jjw.webapp.converter.RegionConverterForDuoTeam</converter-class>
  </converter>
   <converter>
    <description>converts regions for newa</description>
    <converter-id>jjw.webapp.converter.RegionConverterForNewa</converter-id>
    <converter-class>de.jjw.webapp.converter.RegionConverterForNewa</converter-class>
  </converter>
  <converter>
    <description>converts ages</description>
    <converter-id>jjw.webapp.converter.AgeConverter</converter-id>
    <converter-class>de.jjw.webapp.converter.AgeConverter</converter-class>
  </converter>
  <converter>
    <description>converts teams</description>
    <converter-id>jjw.webapp.converter.TeamConverter</converter-id>
    <converter-class>de.jjw.webapp.converter.TeamConverter</converter-class>
  </converter>


  <converter>
    <description>converts double</description>
    <converter-for-class>java.lang.Double</converter-for-class>
    <converter-class>de.jjw.webapp.converter.DoubleConverter</converter-class>
  </converter>
  <converter>
    <converter-for-class>java.lang.Integer</converter-for-class>
    <converter-class>de.jjw.webapp.converter.IntegerConverter</converter-class>
  </converter>
</faces-config>